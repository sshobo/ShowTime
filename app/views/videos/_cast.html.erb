<%= link_to user_path(user, role: @video.casts.find_by(user: user.id)[:role] ) , class: "text-decoration-none" do %>
<div class="User-Comment">
  <div class="d-flex align-items-center">
      <% if user.profile.attached? %>
        <%= cl_image_tag user.profile.key, class: 'avatar-large'%>
      <% else %>
        <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/2/2c/Default_pfp.svg/680px-Default_pfp.svg.png?20220226140232", class: "avatar-large", alt: "avatar-large" %>
      <% end %>
      <h2 class="ms-2"><%= "#{user.first_name} #{user.last_name} | #{@video.casts.find_by(user: user.id)[:role]}" %> </h2>
  </div>
  <p><%= user.bio %></p>
</div>
<% end %>
