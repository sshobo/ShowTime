<div class="content">
  <% if current_user.creator? %>
  <h2 class="text-center">Hi, <%= current_user.first_name %></h2>


    <div class="text-center p-5">
    <button type="button" class="btn btn-flat m5" data-toggle="modal" data-target="#exampleModalCenter">
    Upload a video
    </button>
  </div>

  <!-- Modal -->
  <div class="modal fade show" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Video Details</h5>
          <button type="button" class="close btn btn-secondary" data-dismiss="modal" aria-label="Close" style="width">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render 'new' %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

    <h2 class="text-center p-4"> Videos you uploaded: <%= @videos_uploaded.count %></h2>
  <div class="thumbnails">
    <% @videos_uploaded.each do |video| %>
    <%= render 'video', video: video %>
    <% end %>
  </div>

  <h2 class="text-center p-4"> Videos you were part of: <%= @videos.count %></h2>
  <div class="thumbnails">
    <% @videos.each do |video| %>
    <%= render 'video', video: video %>
    <% end %>
  </div>





  <% else %>
      <br><br><br><br><br>
      <div class="text-center">
        <img src="https://i.ibb.co/qsjKcWR/creator-landing-page-vector-adobe.png" alt="", width="50%">
        <h2 class="text-center" style="text-align: center;">Hi, <%= current_user.first_name %></h2>
        <h2 class="text-center"> Register to become a creator today and join our team of <%= User.all.count %> Creators </h2>
        <div class="text-center">
          <%= button_to 'Switch to Creator', user_path(@user), method: :put, class: 'btn btn-flat' %>
        </div>
      </div>
  `


    <!-- Modal -->
    <div class="modal fade show" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Are you sure</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= render 'creator' %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>`
  <% end %>
</div>
