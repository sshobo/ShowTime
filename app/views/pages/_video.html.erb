<div id="<%= dom_id video %>">
  <div class="col">
    <%= link_to video_path(video), class: "text-decoration-none" do %>
      <div class="video-card">
        <% if video.thumbnail.attached? %>
          <%= cl_image_tag video.thumbnail.key, class: "video-thumbnail", height: 150, width: 200, controls: true %>
        <% else %>
          <img src="/app/assets/images/Blvck.jpg" alt="placeholder thumbnail" class="video-thumbnail">
        <% end %>
        <div class="title-container">
          <h2 class="video-title"><%= video.title %></h2>
        </div>
        <div class="action-buttons d-flex justify-content-between">
        <div>
            <i class="fas fa-play playbutton" style="color: white; font-size: 24px; margin-right: 3px;"></i>
            <i class="fas fa-plus playbutton" style="color: white; font-size: 24px; margin-right: 3px;"></i>
            <i class="fas fa-thumbs-up playbutton" style="color: white; font-size: 24px; margin-right: 3px;"></i>
          </div>
          <i class="fa-solid fa-angle-down playbutton" style="color: white; font-size: 30px"></i>
        </div>
      </div>
    <% end %>
  </div>
</div>
