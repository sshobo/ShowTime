<div id="<%= dom_id video %>">
<div class="col">
      <%= link_to video_path(video), class: "text-decoration-none" do %>
        <div class="video-card">
          <% if video.thumbnail.attached? %>
            <%= cl_image_tag video.thumbnail.key, class: "video-thumbnail", height: 150, width: 200, controls: true %>
          <% else %>
            <img src="https://img.freepik.com/free-photo/old-black-background-grunge-texture-dark-wallpaper-blackboard-chalkboard-room-wall_1258-28312.jpg?q=10&h=200" alt="">
          <% end %>
        </div>
      <% end %>
    </div>
</div>
